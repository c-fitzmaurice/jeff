    "node-sass": "^4.7.2",
    "on-build-webpack": "^0.1.0",
    "path": "^0.12.7",
    "purgecss-webpack-plugin": "^0.13.0",
    "tailwindcss": "^0.3.0",
    "webpack-watch": "^0.2.0",
    "yargs": "^4.8.1"
  },
